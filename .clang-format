# CloudRegistration C++ Code Style Configuration
# Based on Google style with Allman braces for better readability
# This configuration enforces consistent formatting across the entire codebase

BasedOnStyle: Google

# Brace style - Allman for better readability in C++ projects
BreakBeforeBraces: Allman

# Column limit - reasonable for modern displays
ColumnLimit: 120

# Indentation
IndentWidth: 4
TabWidth: 4
UseTab: Never

# Pointer and reference alignment
PointerAlignment: Left
ReferenceAlignment: Left

# Include sorting and grouping
SortIncludes: CaseSensitive
IncludeBlocks: Regroup
IncludeCategories:
  # Qt headers
  - Regex: '^<Q[A-Z].*>'
    Priority: 1
    SortPriority: 1
  # System headers
  - Regex: '^<[^/]*>'
    Priority: 2
    SortPriority: 2
  # Third-party library headers (E57Format, Eigen3, etc.)
  - Regex: '^<(E57Format|Eigen|xerces).*>'
    Priority: 3
    SortPriority: 3
  # Project headers
  - Regex: '^".*"'
    Priority: 4
    SortPriority: 4

# Function and class formatting
AllowShortFunctionsOnASingleLine: Empty
AllowShortIfStatementsOnASingleLine: Never
AllowShortLoopsOnASingleLine: false
AllowShortCaseLabelsOnASingleLine: false

# Spacing
SpaceAfterCStyleCast: false
SpaceAfterLogicalNot: false
SpaceAfterTemplateKeyword: true
SpaceBeforeAssignmentOperators: true
SpaceBeforeParens: ControlStatements
SpaceInEmptyParentheses: false
SpacesInAngles: false
SpacesInCStyleCastParentheses: false
SpacesInParentheses: false
SpacesInSquareBrackets: false

# Line breaking
AlwaysBreakAfterReturnType: None
AlwaysBreakBeforeMultilineStrings: false
AlwaysBreakTemplateDeclarations: Yes
BreakBeforeBinaryOperators: None
BreakBeforeTernaryOperators: true
BreakConstructorInitializers: BeforeColon
BreakInheritanceList: BeforeColon
BreakStringLiterals: true

# Constructor initializer list
ConstructorInitializerIndentWidth: 4
ContinuationIndentWidth: 4

# Access modifiers
AccessModifierOffset: -4

# Namespace formatting
NamespaceIndentation: None
CompactNamespaces: false

# Comments
ReflowComments: true
SpacesBeforeTrailingComments: 2

# Penalties for breaking (lower = more likely to break)
PenaltyBreakAssignment: 2
PenaltyBreakBeforeFirstCallParameter: 19
PenaltyBreakComment: 300
PenaltyBreakFirstLessLess: 120
PenaltyBreakString: 1000
PenaltyExcessCharacter: 1000000
PenaltyReturnTypeOnItsOwnLine: 60

# Bin packing
BinPackArguments: false
BinPackParameters: false

# Alignment
AlignAfterOpenBracket: Align
AlignConsecutiveAssignments: false
AlignConsecutiveDeclarations: false
AlignEscapedNewlines: Left
AlignOperands: true
AlignTrailingComments: true

# Other formatting options
DerivePointerAlignment: false
ExperimentalAutoDetectBinPacking: false
FixNamespaceComments: true
ForEachMacros: ['foreach', 'Q_FOREACH', 'BOOST_FOREACH']
KeepEmptyLinesAtTheStartOfBlocks: false
MaxEmptyLinesToKeep: 1
Standard: Cpp17

# Qt-specific formatting
QtStyleKeywords: true
